        config    OPT_2
            bool    "Both temp tools and final system"

        config    OPT_3
            bool    "Cross tools (only MAKEFLAGS), temp tools and final system" if BOOK_CLFS
    endchoice

    config    REALSBU
        bool    "Build Binutls pass1 without optimization (Real SBU)"
